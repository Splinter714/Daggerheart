    "build": "vite build",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d ../dist",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "test": "vitest run"
  },
  "homepage": "https://splinter714.github.io/Daggerheart",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
